#include<stdio.h>
int main()
{
    char saarc[8][100]={"Bangladesh","India","Pakistan","Sri Lanka", "Nepal","Bhutan", "Maldives",  "Afganistan", "Maldives"};
    for(int row=0; row<7; row++){
        int columSize=strlen(saarc[row]);
            for(int colum=0; colum<columSize; colum++){
            printf("%d %d %c\n",row,colum, saarc[row][colum]);
            }
            printf("\n");
        }


    return 0;
}

#include<stdio.h>
int main()
{
    int twoDArry[5][5]={{6,4,7,8,9},{3,7,1,9,9},{8,6,4,2,7},{2,4,2,5,9},{4,1,6,7,3}};
    int change[5][5];
    for(int row=0; row<5; row++){
        for(int colum=0; colum<5; colum++){
               change[colum][row]=twoDArry[row][colum];
                }
            }

    for(int row=0; row<5; row++){
        for(int colum=0; colum<5; colum++){

            printf("%d",change[row][colum]);
            }
        printf("\n\n");

}


    return 0;
}



